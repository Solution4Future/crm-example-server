<div class="page-header"><h1>Edit client</h1></div>

<% formFor(client, {action: pathTo.client(client), method: 'PUT', id: "client-form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('clients/form.ejs', {locals: {form: form, client: client}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Update client', {class: 'btn btn-primary'}) %> or
        <%- linkTo('Cancel', pathTo.client(client), {class: 'btn'}) %>
    </div>
<% });%>

